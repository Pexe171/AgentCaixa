# Exemplo de variáveis de ambiente (sem valores sensíveis)
PROJECT_NAME=rag_app
DATA_DIR=data
PROCESSED_DIR=data/processed
INDEX_DIR=data/index
LOG_LEVEL=INFO
DISABLE_LOGS=false
API_KEY=
MAX_SNIPPET_CHARS=240
CHUNK_MAX_CHARS=4200
CHUNK_MIN_CHARS=400
RETRIEVE_TOP_K_DEFAULT=6
HYBRID_ALPHA=0.65
STRICT_MIN_SCORE=0.20
ENABLE_DECOMPOSITION=true
LLM_PROVIDER=ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2
OLLAMA_EMBEDDING_MODEL=nomic-embed-text
OPENAI_MODEL=
OPENAI_API_KEY=

# Vetorial (recomendado local)
VECTOR_PROVIDER=qdrant
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION=rag_app_documents

# Pinecone (opcional cloud/pago)
PINECONE_API_KEY=
PINECONE_INDEX=rag-app-index
PINECONE_NAMESPACE=default

# Cache de embeddings
EMBEDDING_CACHE_BACKEND=redis
EMBEDDING_CACHE_REDIS_URL=redis://localhost:6379/0
EMBEDDING_CACHE_KEY_PREFIX=rag_app:embedding
EMBEDDING_CACHE_TTL_SECONDS=86400

# Cache de respostas completas
RESPONSE_CACHE_BACKEND=redis
RESPONSE_CACHE_REDIS_URL=redis://localhost:6379/1
RESPONSE_CACHE_KEY_PREFIX=rag_app:response
RESPONSE_CACHE_TTL_SECONDS=43200

# Memória
SESSION_STORE_BACKEND=memory
SESSION_DB_PATH=data/memory/session_memory.db
SEMANTIC_MEMORY_BACKEND=sqlite
SEMANTIC_MEMORY_DB_PATH=data/memory/semantic_memory.db
SEMANTIC_MEMORY_RETRIEVE_TOP_K=3
SEMANTIC_MEMORY_SUMMARY_INTERVAL=4

# Canais e integração com WhatsApp (Evolution API)
WHATSAPP_CHANNEL_ENABLED=false
WHATSAPP_PROVIDER=evolution
WHATSAPP_EVOLUTION_BASE_URL=http://localhost:8080
WHATSAPP_EVOLUTION_INSTANCE=
WHATSAPP_EVOLUTION_API_KEY=
WHATSAPP_WEBHOOK_SECRET=

# Observabilidade (Langfuse)
OBSERVABILITY_ENABLED=false
OBSERVABILITY_PROVIDER=none
LANGFUSE_HOST=https://cloud.langfuse.com
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
